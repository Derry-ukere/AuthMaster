{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noEmitOnError": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": [
      "es2015",
      "es2017",
      "es2018",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "jest",
      "@types/jest"
    ],
    "allowSyntheticDefaultImports": true,
    "preserveSymlinks": true,
    "baseUrl": ".",
    "paths": {
      "@constants/*": ["./src/constants/*"],
      "@handlers/*": ["./src/handlers/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@interfaces/*": ["./src/interfaces/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@migrations/*": ["./src/migrations/*"],
      "@modules/*": ["./src/modules/*"],
      "@typings/*": ["./src/typings/*"],
      "@utils/*": ["./src/utils/*"],
    },
    "useUnknownInCatchVariables": false,
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/tests/**/*",
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
}
